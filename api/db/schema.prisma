datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Define your own datamodels here and run `yarn redwood prisma migrate dev`
// TODO:  model User: Check on password hashing
//        model codeProject: Check on the parameter for content type
// Roles: User=all users;
//        Owner=First user on a project;
//        Colab=All other users on a project;
//        Admin=All users on a project;  DO WE NEED ADMIN ROLE?

model User {
  id        Int           @id @default(autoincrement())
  username  String        @unique
  password  String
  email     String        @unique
  projects  CodeProject[] @relation("owner")
  colabDocs CodeDoc[]     @relation("colabs")
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Project {
  id        Int       @id @default(autoincrement())
  title     String
  ownerID   Int
  owner     User      @relation("owner", fields: [ownerID], references: [id])
  codeDocs  CodeDoc[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model codeDoc {
  id        Int      @id @default(autoincrement())
  filename  String
  content   String
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])
  colabs    User[]   @relation("colabs")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  version   Int      @version(autoincrement())
}
